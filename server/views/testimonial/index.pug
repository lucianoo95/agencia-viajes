extends ../layout/index
block content
  main.container.mt-5
    h1.text-center.mb-3 #{page}

    .row
      .col-md-12
        
        include ../layout/partials/testimonials

      .col-md-12
        h2.text-center Agrega un testimonial
        if(error)
          each error in errors
            .alert.alert-danger.text-center=error.message

        .row.justify-content-center
          .col-md-8
            form(action="/testimonial" method="POST")
              .form-group
                label(for="name") Nombre
                input.form-control(id="name" type="text" placeholder="Tu nombre" name="name" value=name)
              .form-group
                label(for="email") Correo Electr√≥nico
                input.form-control(id="email" type="email" placeholder="Tu email" name="email" value=email)
              .form-group
                label(for="message") Nombre
                textarea.form-control(id="message" rows="3" placeholder="Tu mensaje" name="message")=message
              
              input.btn.btn-success.btn-block(type="submit", value="Agregar")